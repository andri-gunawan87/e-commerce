@model e_commerce.ViewModels.PembayaranViewModel

@{
    ViewData["Title"] = "DetailPembayaran";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <span>Konfirmasi Pembayaran</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <img src="~/@Model.BuktiPembayaran" alt="@Html.DisplayFor(model => model.BuktiPembayaran)" />
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Detail Pembayaran</h5>
                        <ul>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.MetodePembayaran)</h6>
                                <p>@Html.DisplayFor(model => model.MetodePembayaran)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.TotalBayar)</h6>
                                <p>@Html.DisplayFor(model => model.TotalBayar)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Tanggal)</h6>
                                <p>@Html.DisplayFor(model => model.Tanggal)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Tujuan)</h6>
                                <p>@Html.DisplayFor(model => model.Tujuan)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Pajak)</h6>
                                <p>@Html.DisplayFor(model => model.Pajak)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Status)</h6>
                                <p>@Html.DisplayFor(model => model.Status)</p>
                            </li>
                            @if (ViewBag.IsAdmin)
                            {
                                <form asp-action="KonfirmasiPembayaran">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <input name="IdOrder" class="form-control" value="@Model.IdOrder" hidden></input>
                                    <div class="form-group">
                                        <input type="submit" value="Konfirmasi Pembayaran" class="btn btn-primary" />
                                    </div>
                                </form>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>