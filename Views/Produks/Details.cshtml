@model e_commerce.ViewModels.ProdukViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_NewLayout";
}


<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <a href="#">Women’s </a>
                    <span>@Html.DisplayFor(model => model.Nama)</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <div class="product__details__slider__content">
                        <img data-hash="product-1" class="product__big__img" src=~/@Html.DisplayFor(model => model.Gambar) alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <h3>@Html.DisplayFor(model => model.Nama) <span>Brand: SKMEIMore Men Watches from SKMEI</span></h3>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <span>( 138 reviews )</span>
                    </div>
                    <div class="product__details__price">Rp. @Html.DisplayFor(model => model.Harga)</div>
                    <p>
                        @Html.DisplayFor(model => model.Deskripsi)
                    </p>
                    @*                    <form asp-action="Add" asp-controller="Keranjang" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="produkId" value="@Model.Id" />
                        <button class="btn btn-primary" type="submit" value="Tambahkan ke Keranjang">Tambahkan ke
                        keranjang</button>
                        </form>
                    *@                  
                    <form asp-action="Create" asp-controller="Keranjangs" method="post">
                        @Html.AntiForgeryToken()
                        <div class="product__details__button">
                            <div class="quantity">
                                <span>Quantity:</span>
                                <div class="pro-qty">
                                    <input name="JumlahBarang" type="text"  value="1">
                                    <input name="IdProduk" value="@Model.Id" type="hidden" />
                                </div>
                            </div>
                            
                            <a class="cart-btn"><span class="icon_bag_alt"></span> <input type="submit" value="Add to Cart" /></a>
                            <ul>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                <li><a href="#"><span class="icon_adjust-horiz"></span></a></li>
                            </ul>
                        </div>
                    </form>
                    <div class="product__details__widget">
                        <ul>
                            <li>
                                <span>Availability:</span>
                                <div class="stock__checkbox">
                                    <p>@Html.DisplayFor(model => model.Stock) In Stock</p>
                                </div>
                            </li>
                            <li>
                            <li>
                                <span>Promotions:</span>
                                <p>Free shipping</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
