@using Microsoft.AspNetCore.Mvc.Rendering;
@model e_commerce.ViewModels.ProdukViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "_NewLayout";
}

<!-- Add Product Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form asp-action="Create" class="checkout__form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12">
                    <h5 class="coupon__link">
                        Add Product
                    </h5>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Nama" class="control-label"></label><span>*</span></p>
                                <input asp-for="Nama" class="form-control">
                                <span asp-validation-for="Nama" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Stock" class="control-label"></label><span>*</span></p>
                                <input asp-for="Stock" class="form-control" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p><label asp-for="Harga" class="control-label"></label><span>*</span></p>
                                <input asp-for="Harga" class="form-control" />
                                <span asp-validation-for="Harga" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="Deskripsi" class="control-label"></label><span>*</span></p>
                                <input asp-for="Deskripsi" class="form-control" />
                                <span asp-validation-for="Deskripsi" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="GambarFile" class="control-label"></label></p>
                                <input asp-for="GambarFile" type="file" class="form-control" />
                                <span asp-validation-for="GambarFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="KategoriId" class="control-label"></label>
                                <select asp-for="KategoriId" asp-items="ViewBag.KategoriDataSource" class="form-control"></select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>

                            @*<div class="form-group">
                                <label asp-for="KategoriId" class="control-label"></label>

                                @Html.DropDownList("KategoriId", (List<SelectListItem>)ViewBag.KategoriDataSource,
                                "",
                                new {
                                multiple = "multiple"
                                })
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>*@
                            <div class="form-group text-center">
                                <input type="submit" value="Add Product" class="site-btn" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Add Product Section End -->
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
