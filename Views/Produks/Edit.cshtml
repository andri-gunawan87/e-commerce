@model e_commerce.ViewModels.ProdukViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_NewLayout";
}


<!-- Edit Product Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form asp-action="Edit" class="checkout__form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12">
                    <h5 class="coupon__link">
                        Edit Product
                    </h5>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Nama" class="control-label"></label><span>*</span></p>
                                <input asp-for="Nama" class="form-control">
                                <span asp-validation-for="Nama" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Stock" class="control-label"></label><span>*</span></p>
                                <input asp-for="Stock" class="form-control" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p><label asp-for="Harga" class="control-label"></label><span>*</span></p>
                                <input asp-for="Harga" class="form-control" />
                                <span asp-validation-for="Harga" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="Deskripsi" class="control-label"></label><span>*</span></p>
                                <input asp-for="Deskripsi" class="form-control" />
                                <span asp-validation-for="Deskripsi" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="Gambar" class="control-label" hidden></label></p>
                                <input asp-for="Gambar" type="hidden" class="form-control" />
                                <span asp-validation-for="Gambar" type="hidden" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="GambarFile" class="control-label">Gambar: <br />@Model.Gambar</label></p>
                                <input asp-for="GambarFile" type="file" />
                                <span asp-validation-for="GambarFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="KategoriId" class="control-label"></label>
                                <select asp-for="KategoriId" multiple asp-items="ViewBag.KategoriDataSource" class="form-control"></select>
                                <span asp-validation-for="KategoriId" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Edit Product" class="site-btn" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Edit Product Section End -->
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
