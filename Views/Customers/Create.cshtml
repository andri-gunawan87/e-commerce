@model e_commerce.Datas.Entities.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<!-- Register Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form asp-action="Create" class="checkout__form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-12">
                    <h5 class="coupon__link">
                        Register Akun
                    </h5>
                    <div class="row">
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Username" class="control-label"></label><span>*</span></p>
                                <input asp-for="Username" class="form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p><label asp-for="Email" class="control-label"></label><span>*</span></p>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p><label asp-for="Nama" class="control-label"></label><span>*</span></p>
                                <input asp-for="Nama" class="form-control" />
                                <span asp-validation-for="Nama" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="NoHp" class="control-label"></label><span>*</span></p>
                                <input asp-for="NoHp" class="form-control" />
                                <span asp-validation-for="NoHp" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="Password" class="control-label"></label><span>*</span></p>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="ProfilPicture" class="control-label"></label></p>
                                <input asp-for="ProfilPicture" class="form-control" />
                                <span asp-validation-for="ProfilPicture" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__input">
                                <p><label asp-for="IdAlamat" class="control-label"></label></p>
                                <select asp-for="IdAlamat" class="form-control" asp-items="ViewBag.IdAlamat"></select>
                                <span asp-validation-for="IdAlamat" class="text-danger"></span>
                            </div>
                            <div class="checkout__form__checkbox pt-4">
                                <label for="acc">
                                    @Html.DisplayNameFor(model => model.IsAdmin)
                                    <input type="checkbox" asp-for="IsAdmin" id="acc">
                                    <span class="checkmark"></span>
                                </label>
                                <p>
                                    Ceklist untuk akun dengan role admin
                                </p>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Register" class="site-btn" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Register Section End -->
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
