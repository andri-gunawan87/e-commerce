<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                    <span>Contact</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <img src="~/@Model.ProfilPicture" height="100" alt="@Html.DisplayFor(model => model.ProfilPicture)" />
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Profile</h5>
                        <ul>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Nama)</h6>
                                <p>@Html.DisplayFor(model => model.Nama)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.NoHp)</h6>
                                <p>@Html.DisplayFor(model => model.NoHp)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Username)</h6>
                                <p>@Html.DisplayFor(model => model.Username)</p>
                            </li>
                            <li>
                                <h6>@Html.DisplayNameFor(model => model.Email)</h6>
                                <p>@Html.DisplayFor(model => model.Email)</p>
                            </li>
                            <li>
                                <h6>Roles</h6>
                                @if (Model.IsAdmin == true)
                                {
                                    <p>Admin</p>
                                }
                                else
                                {
                                    <p>Customer</p>
                                }
                            </li>
                            <li>
                                <h6>Alamat Saat Ini</h6>
                                @if (Model.IdAlamatNavigation == null)
                                {
                                    <p>Tidak ada alamat yang dipilih</p>
                                }
                                else
                                {
                                    <p>@Html.DisplayFor(model => model.IdAlamatNavigation.Detail)</p>
                                }
                            </li>
                            <form asp-action="UpdateAlamat">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="IdAlamat" class="control-label"></label>
                                    <select asp-for="IdAlamat" class="form-control" asp-items="ViewBag.IdAlamat"></select>
                                    <span asp-validation-for="IdAlamat" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Update Alamat" class="btn btn-primary" />
                                </div>
                            </form>
                        </ul>
                    </div>
                    <div class="contact__form">
                        <a asp-action="Edit" asp-route-id="@Model.Id" type="submit" class="site-btn text-white">Edit Profile</a>
                        <a asp-controller="Alamats" asp-action="Create" asp-route-id="@Model.Id" type="submit" class="site-btn text-white">Tambah Alamat</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->